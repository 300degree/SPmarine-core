root = true

[*.{js,ts,mjs}]
charset = utf-8
indent_size = 4
insert_final_newline = true
max_line_length = 120
end_of_line = lf
indent_style = tab

[scripts/*.{bash,sh,py}]
indent_size = 4
indent_style = tab

[*.json]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{yml,yaml}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
